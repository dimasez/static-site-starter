    include ../pages/include/header.jade
    include ../pages/include/nav.jade

    block body

    script(src='//ajax.googleapis.com/ajax/libs/jquery/#{pkgs.jquery}/jquery.min.js')
    script.
      window.jQuery || document.write('<script src="vendor/#{pkgs.jquery}/jquery.min.js"><\/script>')
    script(src='#{path}bootstrap.js')
    script(src='#{path}js/bundle.js')


