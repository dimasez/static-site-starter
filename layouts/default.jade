doctype html
html(class='no-js', lang='')
  block vars
    - var path = ''

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    block title
      title Static Website

    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    <!-- Place favicon.ico in the root directory -->

    
    // Google web fonts
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,700,300,600,400&subset=cyrillic-ext,latin', rel='stylesheet', type='text/css')

    // Stylesheets
    link(href='#{path}css/bootstrap.css', rel='stylesheet')
    link(href='#{path}css/flexslider.css', rel='stylesheet')
    link(href='#{path}css/prettyPhoto.css', rel='stylesheet')
    link(rel='stylesheet', href='#{path}css/font-awesome.css')
    //if IE 7
    link(rel='stylesheet', href='#{path}css/font-awesome-ie7.css')
    link(rel='stylesheet', href='#{path}css/style-erica.css')
    // Color Stylesheet - orange, blue, pink, brown, red or green
    link(href='#{path}css/blue.css', rel='stylesheet')
    link(href='#{path}css/bootstrap-responsive.css', rel='stylesheet')
    link(href='#{path}css/my-style.css', rel='stylesheet')
    
    
    
  body
